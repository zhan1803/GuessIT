<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_avatar"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.example.guessit.guessit.MonsterActivity">

<TextView
    android:text="Select An Avatar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textView4"
    android:textSize="30sp"
    android:textAlignment="center"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="11dp" />

    <ImageButton
    android:layout_width="100dp"
    android:layout_height="100dp"
    app:srcCompat="@drawable/monster3"
    android:id="@+id/imageButton9"
    android:layout_marginTop="11dp"
    android:layout_below="@+id/imageButton3"
    android:layout_alignLeft="@+id/imageButton3"
    android:layout_alignStart="@+id/imageButton3"
    android:onClick="goToWaitingPage5"/>

    <ImageButton
    android:layout_width="100dp"
    android:layout_height="100dp"
    app:srcCompat="@drawable/monster2"
    android:id="@+id/imageButton4"
    android:onClick="goToWaitingPage2"
    android:layout_marginTop="18dp"
    android:layout_below="@+id/textView4"
    android:layout_alignRight="@+id/textView4"
    android:layout_alignEnd="@+id/textView4" />

<ImageButton
    android:layout_width="100dp"
    android:layout_height="100dp"
    app:srcCompat="@drawable/monster5"
    android:layout_alignTop="@+id/imageButton9"
    android:layout_alignLeft="@+id/imageButton2"
    android:layout_alignStart="@+id/imageButton2"
    android:id="@+id/imageButton10"
    android:onClick="goToWaitingPage6"/>

<ImageButton
    android:layout_width="100dp"
    android:layout_height="100dp"
    app:srcCompat="@drawable/monster6"
    android:id="@+id/imageButton11"
    android:layout_below="@+id/imageButton9"
    android:layout_alignLeft="@+id/imageButton9"
    android:layout_alignStart="@+id/imageButton9"
    android:layout_marginTop="16dp"
    android:onClick="goToWaitingPage7"/>

<ImageButton
    android:layout_width="100dp"
    android:layout_height="100dp"
    app:srcCompat="@drawable/monster9"
    android:layout_alignTop="@+id/imageButton11"
    android:layout_alignLeft="@+id/imageButton10"
    android:layout_alignStart="@+id/imageButton10"
    android:id="@+id/imageButton12"
    android:onClick="goToWaitingPage8"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/monster8"
        android:id="@+id/imageButton3"
        android:layout_marginTop="14dp"
        android:onClick="goToWaitingPage3"
        android:layout_below="@+id/imageButton"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/monster0"
        android:id="@+id/imageButton"
        android:onClick="goToWaitingPage1"
        android:layout_alignTop="@+id/imageButton4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/monster4"
        android:id="@+id/imageButton2"
        android:contextClickable="false"
        android:visibility="visible"
        android:onClick="goToWaitingPage4"
        android:layout_alignTop="@+id/imageButton3"
        android:layout_alignLeft="@+id/imageButton4"
        android:layout_alignStart="@+id/imageButton4" />

</RelativeLayout>
